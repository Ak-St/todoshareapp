<h1>Add new Todo</h1>

<%= form_with(model: @todo, local: true) do |f| %>
  <%= f.label :content, 'ToDo' %>
  <%= f.text_field :content %>
  <%= f.label :name, 'Name' %>
  <%= f.text_field :name %>
  <%= f.label :duedate, 'Duedate' %>
  <%= f.datetime_field :duedate %>
  <%= f.label :status, 'Status(%)' %>
  <%= f.number_field :status %>
  <%= f.label :remark, 'Remarks' %>
  <%= f.text_area:remark %>

  <%= f.submit 'Save' %>
<% end %>

<%= link_to 'Back to ToDo list', todos_path %>